<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ezgif_com_gif_maker"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/data_ref"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/avatar1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/d9464_arkhip_font"
            android:gravity="center"
            android:text="Статус"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginStart="140dp"
            android:layout_weight="2"
            android:fontFamily="@font/d9464_arkhip_font"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:fontFamily="@font/d9464_arkhip_font"
            android:gravity="center"
            android:text="$"
            android:textColor="@color/dolor"
            android:textSize="23sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data_ref"
        android:background="@android:color/black" />


    <LinearLayout
        android:id="@+id/SecLay"
        android:layout_width="292dp"
        android:layout_height="460dp"
        android:layout_below="@id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/round_other"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/d9464_arkhip_font"
            android:gravity="center"
            android:text="Сюжет Beholder повествует о довольно мрачном антиутопическом мире,в котором победил суровый тоталитаризм: свободы граждан сильно ограничены, процветает
            доносительство и шпионаж за простыми жителями, дабы выявлять 'неблагонадежных'
            и расправляться с несогласными. Игроку отводится роль чиновника Карла, который трудится
            управляющим в многоквартирном доме."
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="292dp"
        android:layout_height="62dp"
        android:layout_below="@id/SecLay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/round_other"
        android:fontFamily="@font/d9464_arkhip_font"
        android:text="Далее"
        android:textColor="@color/black"
        android:textSize="23sp" />


</RelativeLayout>