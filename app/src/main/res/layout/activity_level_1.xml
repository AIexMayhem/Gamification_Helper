<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ezgif_com_gif_maker"
    >

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/d9464_arkhip_font"
        android:text="Викторина 1"
        android:textAlignment="center"
        android:textColor="@color/color_text_buttons"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/Answer_level_1_1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_back_red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="57dp"
                android:text="Ответ 1"
                android:textSize="20dp"
                android:textColor="@color/color_text_buttons"
                android:fontFamily="@font/d9464_arkhip_font"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Answer_level_1_2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_back_red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="57dp"
                android:text="Ответ 2"
                android:textSize="20dp"
                android:textColor="@color/color_text_buttons"
                android:fontFamily="@font/d9464_arkhip_font"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Answer_level_1_3"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="290dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_back_red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="57dp"
                android:text="Ответ 3"
                android:textSize="20dp"
                android:textColor="@color/color_text_buttons"
                android:fontFamily="@font/d9464_arkhip_font"

                />
        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>