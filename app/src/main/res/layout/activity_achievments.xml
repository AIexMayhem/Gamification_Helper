<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ezgif_com_gif_maker"
    tools:context=".Achievments_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:id="@+id/avatarView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LevelCounterAchievements"
                android:fontFamily="@font/mainfont"
                android:textSize="20sp"
                android:layout_weight="35"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mainfont"
                android:textSize="20sp"
                android:id="@+id/CoinCounterAchievements"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="MM"
                android:background="@drawable/round_back_red"
                android:onClick="startMenuActivityFromAchievements"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="8dp"
            android:background="#FF000000"
            android:layout_height="1dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pageName"
                    android:layout_width="271dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:text="Достижения"
                    android:textSize="44dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="76dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/goblet_rgg16f93o91g"
                    android:layout_alignLeft="@+id/pageName"/>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/pageName"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:id="@+id/MainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:background="@drawable/round_back_red"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/achievement1" />
                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/ach1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Achievement 1"
                                        android:textColor="@color/black"
                                        android:textSize="26dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:background="@drawable/round_back_red"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/achievement2" />
                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/ach2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Achievement 2"
                                        android:textColor="@color/black"
                                        android:textSize="26dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:background="@drawable/round_back_red"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent"

                                android:layout_height="80dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/achievement3" />
                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/ach3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Achiev    ement 3"
                                        android:textColor="@color/black"
                                        android:textSize="26dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:background="@drawable/round_back_red"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout

                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/achievement4" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="22dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/ach4"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Achievement 4"
                                        android:textColor="@color/black"
                                        android:textSize="26dp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>